<h1><%= pluralize(@projects.size, 'Project') %></h1>

<% @projects.each do |project| %>
  <article class ="project">
    <header>
      <h2><%= link_to(project.name, project) %>
      </h2>
      <%= image_for(project) %>
    </header>
    <p>
      <%= truncate(project.description, length: 150) %>
    </p>
    <table>
      <tr>
        <th>Target Pledge Amount:</th>
        <td><%= number_to_currency(project.target_pledge_amount) %></td>
      </tr>
      <tr>
        <th>Website:</th>
        <td><%= project.website %></td>
      </tr>
      <tr>
        <th>Pledging Ends:</th>
        <td><%= format_pledge_end(project) %> remaining</td>
      </tr>
    </table>
  </article>
<% end %>
